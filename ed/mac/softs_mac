#!/bin/bash

export LISTE_SOFTS=""
export LISTE_SOFTS_A_INSTALL=""


# SOFTS :
#-----------------------------------------------------------------------------------------------------------------------
#-----------------------------------------------------------------------------------------------------------------------
# PYTHON
#alias pyt="/mnt/c/PYTHON/3.9.1/python.exe"




#-----------------------------------------------------------------------------------------------------------------------
#-----------------------------------------------------------------------------------------------------------------------
# HOUDINI

if [[ $SYSTEM == "linux" ]];then
    version="19.0.383"
    v="19.0"
    lien="/mnt/c/'Program Files'/'Side Effects Software'/Houdini\ $version/bin/houdinifx.exe"
elif [[ $SYSTEM == "mac" ]];then
    version="18.0.774"
    v="18.0"
    lien="/Applications/Houdini/Houdini$version/Houdini\ FX\ $version.app/Contents/MacOS/Houdinifx"
fi


gohoudini ()
{
	export SOFT="HOUDINI"
	path="$ROOT_PIPE/projets/$TYPE/$NAME/02_work/houdini"
    extension="hip"
    export ROOT_SOFT=$path

	cd "$BIN/python_tools/"
    python3 presse_papier.py $path
    cd -; cl

	go $path $extension

	python "$BIN/python_tools/make_houdini_env.py"
}

alias houdini="$lien"
alias hou="$lien"
alias gohip="gohoudini"
alias goh="gohoudini"
alias hip="gohoudini"


# MAIN HOUDINI FILE
alias mh="job _tool houdini main fx; hip; hou MAIN.001.hip"

# SE DEPLACER VERS LE DOSSIER DE CONFIG HOUDINI
alias hc="cd /Users/Shared/houdini; l"

export HOUDINI_VERSION=$version
export HOUDINI_V=$v
export LISTE_SOFTS+="\nHOUDINI $HOUDINI_VERSION [hou][gohip - goh - hip][main houdini : mh]"
#-----------------------------------------------------------------------------------------------------------------------
#-----------------------------------------------------------------------------------------------------------------------
#BLENDER
version="3.01"
lien="/Applications/Blender/"$version"/Blender.app/Contents/MacOS/Blender"

goblender ()
{
    export SOFT="BLENDER"
    path="$ROOT_PIPE/projets/$TYPE/$NAME/02_work/blender"
	extension="blend"
	export ROOT_SOFT=$path

	cd "$BIN/python_tools/"
    python3 presse_papier.py $path
    cd -; cl

    go $path $extension

    python "$BIN/python_tools/make_houdini_env.py"

}

alias blender="$lien"
alias ble="$lien"
alias gob="goblender"

export BLENDER_VERSION="$version"
export LISTE_SOFTS+="\nBLENDER $BLENDER_VERSION [ble][gob]"
