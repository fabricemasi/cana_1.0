#BLENDER

version="3.5.1"
export BLENDER_VERSION="$version"

lien="/soft/blender/$BLENDER_VERSION/blender"

goblender ()
{
    export SOFT="BLENDER"
    path="$ROOT_PIPE/chantiers/$TYPE/$PROJET/$FOLDER/02_work/blender"
    extension="blend"
    export ROOT_SOFT=$path

	cd "$BIN/python_tools/"
    python3 presse_papier.py $path
    cd -;

    go $path $extension

    cl
}

blender ()
{
    if [[ $# == 0 ]];then

        lien="/soft/blender/$BLENDER_VERSION/blender"

    elif [[ $# == 1 ]];then
        vv=$1

        if [[ $1 == "2.8" ]];then
            vv="2.80rc3"
        elif [[ $1 == "3.5" ]];then
            vv="3.5.1"
        fi

        lien="/soft/blender/$vv/blender"

    fi
    
    $lien
}

alias ble=blender
alias bl=blender

alias gob="goblender"

export BLENDER_VERSION="$version"
export LISTE_SOFTS+="\nBLENDER $BLENDER_VERSION [blender-ble-bl][goblender-gob]"
#=======================================================================================================================
