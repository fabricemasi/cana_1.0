alias ga="$lien"
alias gogaf="gogaffer"
alias goga="gogaffer"
alias gog="gogaffer"


export LISTE_SOFTS+="\nGAFFER $GAFFER_VERSION [gaffer-gaf-ga][gogaf-goga-gog]"
