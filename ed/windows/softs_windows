#BRIDGE

version="12.0.1.246"
v="2022"

bd(){
    lien="/mnt/c/'Program Files'/Adobe/'Adobe Bridge 2022'/Bridge.exe"
    path_w="$ROOT_PIPE_W\\chantier\\$TYPE\\$PROJ\\$FOLD\\01_ref\\bridge"
    echo $lien
    eval $lien '$path_w'
}

ref(){
    lien="/mnt/c/'Program Files'/Adobe/'Adobe Bridge 2022'/Bridge.exe"
    path_w="$ROOT_PIPE_W\\chantier\\$TYPE\\$PROJ\\$FOLD\\01_ref\\bridge"
    echo $lien
    eval $lien '$path_w'
}


img(){
    lien="/mnt/c/'Program Files'/Adobe/'Adobe Bridge 2022'/Bridge.exe"
    path_w="P:\bibliotheque\images"
    echo $lien
    eval $lien '$path_w'
}





export BRIDGE_VERSION=$version
export BRIDGE_V=$v
export LISTE_SOFTS+="\nBRIDGE $BRIDGE_VERSION $BRIDGE_V [bd ref bibimg][]"
