gohoudini ()
{
	export SOFT="HOUDINI"
	path="$ROOT_PIPE/chantier/$TYPE/$PROJ/$FOLD/02_work/houdini"
    extension="hip"
    export ROOT_SOFT=$path

	cd "$BIN/python_tools/"
    python3 presse_papier.py $path
    cd -; cl

	go $path $extension

	python "$BIN/python_tools/make_houdini_env.py"
}

