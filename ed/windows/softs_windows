version="2022"
lien="/mnt/c/'Program Files'/Autodesk/'AutoCAD 2022'/acad.exe /product ACAD /language 'fr-FR'"

goautocad ()
{
    export SOFT="AUTOCAD"
    path="$ROOT_PIPE/chantier/$TYPE/$PROJ/$FOLD/02_work/autocad"
    export ROOT_SOFT=$path


    path_w="$ROOT_PIPE_W\chantier\\$TYPE\\$PROJ\\$FOLD\\02_work\\autocad"
	extension="dwg"

	cd "$BIN/python_tools/"
    python3 presse_papier.py $path_w
    cd -; cl

    go $path $extension
}

alias autocad="$lien"
alias acad="$lien"
alias cad="$lien"
alias gocad="goautocad"
alias goc="goautocad"

export AUTOCAD_VERSION="$version"
export LISTE_SOFTS+="\nAUTOCAD $AUTOCAD_VERSION [acad cad][gocad goc]"
